{
  "name": "albatros-backend",
  "type": "docker",
  "docker": {
    "image": "node:18-alpine"
  },
  "build": {
    "command": "npm install --production && npm list pdf-parse"
  },
  "run": {
    "command": "node src/server.js"
  },
  "env": [
    {
      "name": "PORT",
      "value": "3001"
    },
    {
      "name": "NODE_ENV",
      "value": "production"
    }
  ]
}
